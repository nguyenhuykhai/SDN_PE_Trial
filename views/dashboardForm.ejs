<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Create Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <!-- Include file header.ejs -->
    <%- include('header') -%>

    <section style="background-color: #eee;">
        <div class="container py-5">
            <!-- Display toast if url have params status -->
            <div id="toast"></div>

            <div class="card text-black">
                <div class="card-body">
                    <p class="h1 text-uppercase">Create Item</p>
                    <form id="formItem" action="/dashboard" method="POST">
                        <!-- Item Name -->
                        <div class="mb-3">
                            <label for="title" class="h6 form-label fw-bold" style="float: inline-start">Name</label>
                            <input type="text" id="title" name="name" value="" class="form-control">
                            <div id="errorTitle"></div>
                        </div>

                        <!-- Item Description -->
                        <div class="mb-3">
                            <label for="titleDescription" class="h6 form-label fw-bold" style="float: inline-start">Description</label>
                            <input type="text" id="titleDescription" name="description" value="" class="form-control">
                            <div id="errorTitleDescription"></div>
                        </div>

                        <!-- Submit Btn -->
                        <button type="submit" id="submitBtn1" class="btn btn-outline-primary">Create</button>
                        <!-- Reset Btn -->
                        <button type="reset" class="btn btn-outline-primary">Reset</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script>
      // ------------------------------------VALIDATE FORM------------------------------------
      // Check input must be text A-Z/a-z/0-9 and not empty
      const titleInput = document.getElementById('title');
      const titleDescriptionInput = document.getElementById('titleDescription');
      const formItem = document.getElementById('formItem');
      formItem.addEventListener('submit', (e) => {
        if (titleInput.value === '' || titleDescriptionInput.value === '' || !titleInput.value.match(/[^A-Za-z0-9]/) || !titleDescriptionInput.value.match(/[^A-Za-z0-9]/)){
          e.preventDefault();
          if (titleInput.value === '' || !titleInput.value.match(/[^A-Za-z0-9]/)) {
            const errorTitle = document.getElementById('errorTitle');
            errorTitle.innerHTML = `<p class="text-danger">Invalid input</p>`;
          } else {
            const errorTitle = document.getElementById('errorTitle');
            errorTitle.innerHTML = '';
          }
          if (titleDescriptionInput.value === '' || !titleDescriptionInput.value.match(/[^A-Za-z0-9]/)) {
            const errorTitleDescription = document.getElementById('errorTitleDescription');
            errorTitleDescription.innerHTML = `<p class="text-danger">Invalid input</p>`;
          } else {
            const errorTitleDescription = document.getElementById('errorTitleDescription');
            errorTitleDescription.innerHTML = '';
          }
        }
      });
    </script>
  </body>
</html>